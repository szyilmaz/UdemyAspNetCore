@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<UdemyAspNetCore.Models.Customer>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Customer - List</title>
        <link href="~/style.css" rel="stylesheet" />
        <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container">
            <h3>Customer List</h3>
            <a href="/Home/Create">Create</a>
            <table class="table table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Age
                        </th>
                        <th>
                            İşlem
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.Age
                            </td>
                            <td>
                                <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Güncelle</a>
                                <a href="/Home/Remove/@item.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
      
    </body>
    </html>


