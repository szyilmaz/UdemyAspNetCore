@using UdemyAspNetCore.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Customer

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        Create Customer
    </title>
    <link href="~/style.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h3>Create Customer</h3>
        <form asp-action="CreateNew" asp-controller="Home" method="post">
            <div class="form-group">
                <label>Customer First Name:</label>
                <input asp-for="@Model.FirstName" type="text" name="firstName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Customer Last Name:</label>
                <input asp-for="@Model.LastName" type="text" name="lastName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Customer Age:</label>
                <input asp-for="@Model.Age" type="text" name="age" class="form-control" />
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

</body>
</html>