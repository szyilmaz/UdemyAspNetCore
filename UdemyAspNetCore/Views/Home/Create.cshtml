@model Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create Customer</h3>
<form asp-action="CreateNew" asp-controller="Home" method="post">
    <div class="form-group">
        <label>Customer First Name:</label>
        <input asp-for="@Model.FirstName" type="text" name="firstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Customer Last Name:</label>
        <input asp-for="@Model.LastName" type="text" name="lastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Customer Age:</label>
        <input asp-for="@Model.Age" type="text" name="age" class="form-control" />
    </div>
    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
